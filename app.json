{
  "expo": {
    "name": "Love Ticket",
    "slug": "love-ticket",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "love-ticket",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF4B4B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shokoi.loveticket"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF4B4B"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.shokoi.loveticket"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-community/datetimepicker",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-7370584857233870~1238293842",
          "iosAppId": "ca-app-pub-7370584857233870~1238293842"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "このアプリはQRコードをスキャンしてパートナーとペアリングするためにカメラを使用します。"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
